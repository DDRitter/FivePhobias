<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.artactivo.fivephobias.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/background_description"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_0"
                    style="@style/Image"
                    android:contentDescription="@string/image_description_0"
                    android:src="@drawable/currency" />

                <TextView
                    android:id="@+id/title_0"
                    style="@style/Title"
                    android:onClick="togglePhobia"
                    android:tag="0"
                    android:text="@string/phobia_0" />

            </RelativeLayout>

            <View style="@style/Divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_1"
                    style="@style/Image"
                    android:contentDescription="@string/image_description_1"
                    android:src="@drawable/teens" />

                <TextView
                    android:id="@+id/title_1"
                    style="@style/Title"
                    android:onClick="togglePhobia"
                    android:tag="1"
                    android:text="@string/phobia_1" />

            </RelativeLayout>

            <View style="@style/Divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_2"
                    style="@style/Image"
                    android:contentDescription="@string/image_description_2"
                    android:src="@drawable/words" />

                <TextView
                    android:id="@+id/title_2"
                    style="@style/Title"
                    android:onClick="togglePhobia"
                    android:tag="2"
                    android:text="@string/phobia_2" />

            </RelativeLayout>

            <View style="@style/Divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_3"
                    style="@style/Image"
                    android:contentDescription="@string/image_description_3"
                    android:src="@drawable/eyes" />

                <TextView
                    android:id="@+id/title_3"
                    style="@style/Title"
                    android:onClick="togglePhobia"
                    android:tag="3"
                    android:text="@string/phobia_3" />

            </RelativeLayout>

            <View style="@style/Divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/image_4"
                    style="@style/Image"
                    android:contentDescription="@string/image_description_4"
                    android:src="@drawable/knowledge" />

                <TextView
                    android:id="@+id/title_4"
                    style="@style/Title"
                    android:onClick="togglePhobia"
                    android:tag="4"
                    android:text="@string/phobia_4" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/content_0"
                style="@style/Content"
                android:onClick="togglePhobia"
                android:tag="0"
                android:text="@string/content_text_0" />

            <TextView
                android:id="@+id/content_1"
                style="@style/Content"
                android:onClick="togglePhobia"
                android:tag="1"
                android:text="@string/content_text_1" />

            <TextView
                android:id="@+id/content_2"
                style="@style/Content"
                android:onClick="togglePhobia"
                android:tag="2"
                android:text="@string/content_text_2" />

            <TextView
                android:id="@+id/content_3"
                style="@style/Content"
                android:onClick="togglePhobia"
                android:tag="3"
                android:text="@string/content_text_3" />

            <TextView
                android:id="@+id/content_4"
                style="@style/Content"
                android:onClick="togglePhobia"
                android:tag="4"
                android:text="@string/content_text_4" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>